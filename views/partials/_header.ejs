<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    
    <% if (!user) { %> <!-- Display "Register" and "Login" links when user is not logged in -->
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/login" style="font-weight: bold;">Login</a>
        <a class="nav-item nav-link" href="/register" style="font-weight: bold;">Register</a>
       </div>
    <% } else { %> <!-- Display "Logout" button when user is logged in -->
      <span class="ml-2 navbar-text">
        Logged in as: <%= user.email %>
      </span>
      <form method="POST" action="/logout" class="form-inline ml-2">
        <button type="submit" class="btn btn-primary">Logout</button>
      </form>
    <% } %>
  </nav>
</header>
